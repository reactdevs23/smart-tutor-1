{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*", "./src/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/auth/[...nextauth]",
    "src/app/layout.js",
    "src/app/verfication-success/page.jsx",
    "src/app/verfication-failed/page.jsx"
  ],
  "exclude": ["node_modules"]
}
